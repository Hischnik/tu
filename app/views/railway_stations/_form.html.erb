<%= form_with(model: railway_station) do |form| %>
  <% if railway_station.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(railway_station.errors.count, "error") %> не удалось сохранить:</h2>

      <ul>
        <% railway_station.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :title, style: "display: block" %>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.submit "Ok" %>
  </div>
<% end %>
